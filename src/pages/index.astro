---
import AppointeddLogo from "@images/appointedd-logo.svg";
import ClearSkyLogicLogo from "@images/clearskylogic-logo.jpg";
import CodebarLogo from "@images/codebar-logo.png";
import profileImage from "@images/profile.jpg";
import { Temporal } from "@js-temporal/polyfill";
import DefaultLayout from "@layouts/DefaultLayout.astro";
import { Image } from "astro:assets";
import clsx from "clsx";
import Divider from "src/components/Divider.astro";
import ExperienceCard from "src/components/ExperienceCard.astro";
import IconCardLink from "src/components/IconCardLink.astro";
import Tag from "src/components/Tag.astro";

const images = {
  companies: {
    appointedd: {
      alt: "Appointedd Logo",
      height: 80,
      src: AppointeddLogo,
      width: 220,
    },
    clearSkyLogic: {
      alt: "ClearSky Logic Logo",
      class: clsx("!bg-[#19181D]"),
      height: 80,
      src: ClearSkyLogicLogo,
      width: 80,
    },
    codebar: {
      alt: "Codebar Logo",
      height: 80,
      src: CodebarLogo,
