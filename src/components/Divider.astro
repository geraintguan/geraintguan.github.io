---
const colors = {
  default: "#268bd2",
  green: "#859900",
  red: "#cb4b16",
  violet: "#6c71c4",
};

interface Props {
  color?: keyof typeof colors;
}

const { color } = Astro.props;

const gradientColor = color ? colors[color] : colors.default;
---

<div class="gradient-line"></div>

<style define:vars={{ gradientColor }}>
  .gradient-line {
    height: 4px;
    width: 200px;
    border: none;
    background: linear-gradient(
      to right,
      #fdf6e3 0%,
      var(--gradientColor) 50%,
      #fdf6e3 100%
    );
    margin: auto;
  }

  html[data-theme="dark"] .gradient-line {
    background: linear-gradient(
      to right,
      #002b36 0%,
      var(--gradientColor) 50%,
      #002b36 100%
    );
  }
</style>
